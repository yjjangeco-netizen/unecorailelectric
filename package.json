{
  "name": "unecoelectric",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build && next export",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run lint && npm run type-check && npm run test && npm run test:e2e",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run type-check && npm run test",
    "db:migrate": "npm run db:migrate:dev",
    "db:migrate:dev": "supabase db push --db-url $DATABASE_URL_DEV",
    "db:migrate:prod": "supabase db push --db-url $DATABASE_URL_PROD",
    "db:rollback": "supabase db reset --db-url $DATABASE_URL_DEV",
    "db:status": "supabase db diff --db-url $DATABASE_URL_DEV",
    "db:seed": "npm run db:seed:dev",
    "db:seed:dev": "psql $DATABASE_URL_DEV -f database/seed/dev-data.sql",
    "db:seed:prod": "psql $DATABASE_URL_PROD -f database/seed/prod-data.sql",
    "test:load": "artillery run tests/load/load-test.yml",
    "test:memory": "node tests/performance/memory-test.js",
    "test:performance": "lighthouse http://localhost:3000 --output=json --output-path=./tests/performance/lighthouse-report.json",
    "test:security": "npm audit && npm run test:sql-injection",
    "test:auth": "jest --testPathPattern=auth",
    "test:sql-injection": "jest --testPathPattern=security",
    "test:stress": "playwright test tests/stress/",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@playwright/test": "^1.54.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-toast": "^1.2.14",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.38.0",
    "@tanstack/react-query": "^4.40.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "googleapis": "^128.0.0",
    "lucide-react": "^0.294.0",
    "next": "^14.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "autoprefixer": "^10.4.16",
    "critters": "^0.0.23",
    "eslint": "8.57.1",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lightningcss": "^1.25.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.32",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
